    <script>
        function startHotel(btnId) {
            $('#' + btnId).removeClass('btn-default').addClass('btn-success').text('Stop Hotel');
        }
        function stopHotel(btnId) {
            0
            $('#' + btnId).removeClass('btn-success').addClass('btn-default').text('Start Hotel');;
        }
        $(document).on('click', '#startHotel.btn-default', function () {
            var btnId = $(this).attr('id');
            startHotel(btnId)
        });
        $(document).on('click', '#startHotel.btn-success', function () {
            var btnId = $(this).attr('id');
            stopHotel(btnId);
        });
    </script>

